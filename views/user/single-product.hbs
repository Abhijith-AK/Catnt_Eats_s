<div style="">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 mt-5 pt-5 text-center">
                <h1 style="color: white;  font-family: serif;">
                    {{product.pname}}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 text-center p-5 mt-3">


                <img src="/adminpro-image/{{product._id}}1.jpg" id="img1"
                    style="width: 600px; height: 600px;  border-radius: 20px;" class="mt-2 p-2 img-fluid">
                <img src="/adminpro-image/{{product._id}}2.jpg" id="img2"
                    style="width: 600px; height: 600px;  border-radius: 20px; display: none;"
                    class="mt-2 p-2 img-fluid">
                <img src="/adminpro-image/{{product._id}}3.jpg" id="img3"
                    style="width: 600px; height: 600px;  border-radius: 20px; display: none;"
                    class="mt-2 p-2 img-fluid">

                <div class="text-center mt-3">
                    <button id="b1" style="border-radius: 100%;" class="btn btn-dark"><b></b></button>
                    <button id="b2" style="border-radius: 100%;" class="btn btn-dark ml-2"><b></b></button>
                    <button id="b3" style="border-radius: 100%;" class="btn btn-dark ml-2"><b></b></button>
                </div>



            </div>
            <div class="col-md-6 mt-5 p-5" style="color: white;">

                <div id="idd" class="mt-5">
                    <h3 class=""><B>P</B>roduct Type&emsp;:&emsp;{{product.type}}</h3> <br>
                    <h3 class=""><b>Q</b>antity &emsp;:&emsp;{{product.qun}}</h3>
                    <h3 class="mt-5 text-center">{{product.description}}</h3>

                    <h3 class="mt-5">&#8377; &emsp; Price&emsp;:&emsp; {{product.price}} /-</h3>

                    <form action="/cart?id={{product._id}}" method="post" class="p-4" id="qut">
                        <div class="form-group">
                            <label for="exampleInputEmail1"
                                style="font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;"><b>Enter
                                    Quantity :</b></label>
                            <input type="number" name="cut" class="form-control p-2" id="exampleInputEmail1"
                                aria-describedby="emailHelp" style="width: 20%;">
                            {{#if cuterr}}
                            <p class="mt-2" style="color: red;"><i>{{cuterr}} {{product.qun}}</i></p>
                            {{/if}}
                            {{#if succ}}
                            <p class="mt-2" style="color: rgb(14, 179, 19);"><i>{{succ}}</i></p>
                            {{/if}}
                        </div>

                        <button type="submit" class="btn btn-primary mt-4" id="button"
                            style="width: 100%;display: inline;"><b>Add To Cart</b></button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    #button {
        color: white;
        outline: none;
        border: none;
        font-weight: 700;
        border-radius: 15px;
        padding-left: 2rem;
        padding-right: 2rem;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        background-color: rgba(51, 51, 51, 0.5);
        cursor: pointer;
        margin-right: 1rem;
    }

    #button:hover {
        color: black;
        background-color: #e6e6e6;
    }
</style>

<script>
    $(document).ready(function () {
        $('#card').click(function () {
            $('#paycard').show(1000)
            $('#imgs').hide(1000)
        })
        $('#upi').click(function () {

            $('#imgs').show(1000)
            $('#paycard').hide(1000)
        })

        $('#b1').click(function () {
            $('#img1').show(1000)
            $('#img2').hide(1000)
            $('#img3').hide(1000)
        })
        $('#b2').click(function () {

            $('#img2').show(1000)
            $('#img1').hide(1000)
            $('#img3').hide(1000)

        })
        $('#b3').click(function () {

            $('#img3').show(1000)
            $('#img1').hide(1000)
            $('#img2').hide(1000)
        })

        $('#pets').click(function () {
            $('#f1').toggle(3000)
        })
        $('#qut').validate({
            rules:
            {
                cut: {
                    required: true,
                    minlength: 1
                }
            }
        })
    })
</script>