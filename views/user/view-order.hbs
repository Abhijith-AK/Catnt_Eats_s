<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mt-5 p-5">
            <table class="table text-light">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Products</th>
                        <th scope="col">Products Image</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Payment Method</th>
                        <th scope="col"> Status</th>
                        <th scope="col">Payment Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each info}}
                    <tr>

                        <td>{{@index}}</td>
                        <td>{{this.products.pname}}</td>
                        <td><img src="/adminpro-image/{{this.products._id}}1.jpg" style="width: 200px; height: 200px;"
                                alt=""></td>
                        <td style="max-width: 90px;">{{this.products.description}}</td>
                        <td>{{this.products.price}}</td>
                        <td>{{this.quantity}}</td>
                        <td>{{this.pay}}</td>
                        <td>{{this.status}}</td>
                        <td>{{this.date}}</td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>