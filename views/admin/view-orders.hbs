<div class="container-fluid" style="background-color: #ffff;">
    <div class="row">
        <div class="col-md-12 mt-5 p-5">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Products</th>
                        <th scope="col">Products Image</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Payment Method</th>
                        <th scope="col"> Status</th>
                        <th scope="col">Payment Date</th>
                        <th scope="col">User(Buy Products)</th>
                        <th scope="col">User Email</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each pro}}
                    <tr>

                        <td>{{@index}}</td>
                        <td>{{this.pro.pname}}</td>
                        <td><img src="/adminpro-image/{{this.pro._id}}1.jpg"
                                style="width: 200px; height: 200px; border-radius: 20px;" alt=""></td>
                        <td style="max-width: 90px;">{{this.pro.description}}</td>
                        <td>{{this.pro.price}}</td>
                        <td>{{this.qut}}</td>
                        <td>{{this.pay}}</td>
                        <td>{{this.status}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.user.user}}</td>
                        <td>{{this.user.email}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>