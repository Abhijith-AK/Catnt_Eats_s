<div class="container-fluid bg-light p-5" style="height: auto;">
    <div class="row">
        {{#each info}}
        <div class="col-md-4 text-center mt-5 pt-5">
            <div class="card m-auto p-3 text-center" style="width: 18rem; border-radius: 20px;">
                <h5 class="card-title text-center ">{{this.products.pname}}</h5>
                <img class="card-img-top " src="/adminpro-image/{{this.pro._id}}1.jpg" alt="Card image cap"
                    height="200px">
                <div class="card-body">
                    <h5 class="card-title text-center">Price : â‚¹{{this.total}}/-</h5>
                    <h5 class="card-title text-center">Quantity : {{this.qut}}UTS</h5>
                    <h5 class="card-title text-center">Payment Type : {{this.pay}}</h5>
                    <h5 class="card-title text-center p-1" style="background-color: rgb(163, 233, 66);">
                        {{this.status}}</h5>
                    <h5 class="card-title text-center">{{this.date}}</h5>
                    <a href="/admin/giveproducts?id={{this._id}}"><img class="card-img-top "
                            src="/javascripts/qrcodes/{{this._id}}.png" alt="Card image cap" height="auto"></a>
                </div>
                <a href="/admin/adminorder?id={{this._id}}&userid={{this.user._id}}" class="accept btn btn-success mt-5"
                    style="text-decoration: none; font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;font-weight: 800;"
                    onclick="return confirm('Double verification  Are you shure to Conform??')">Order Placed
                    <span class="fa fa-check"></span></a>
            </div>
        </div>

        {{/each}}

    </div>
</div>